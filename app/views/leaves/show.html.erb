  <thead>
    <tr>
      <th scope="col">Lave type:</th>
      <th scope="col">From Date:</th>
      <th scope="col">Till Date: </th>
      <th scope="col">Total Days:</th>
      <th scope="col">Reason:</th>
    </tr>
  </thead>
